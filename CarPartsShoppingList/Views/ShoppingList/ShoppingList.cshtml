@using CarPartsShoppingList.Infrastructure.Data.Models
@model List<ShoppingListViewModel>

@{
    ViewData["Title"] = "Shopping list";
}

<div class="row">
    <div class="col-md-12 test-right pd-15">
        <a  asp-controller="ShoppingList" asp-action="Add" class="btn btn-success btn-flat">
            <i class="fa fa-plus"></i>
            Add
        </a>
    </div>
</div>

<body>
    <hr />
    <table style="width:100%">
        <tr>
            <th>ShoppingListName</th>
            <th colspan="2">Actions</th>
        </tr>
        @foreach (ShoppingListViewModel shoppingList in Model)
        {
            <tr>
                <td>@shoppingList.ShoppingListName</td>
                <td> <a asp-action="ShoppingListItem" asp-controller="ShoppingList" asp-route-id="@shoppingList.Id" class="btn btn-info btn-sm">Review</a>
                <td> <a asp-action="Edit" asp-controller="ShoppingList" asp-route-id="@shoppingList.Id" class="btn btn-danger btn-flat">Edit</a>
                <td />
            </tr>
        }
    </table>
</body>