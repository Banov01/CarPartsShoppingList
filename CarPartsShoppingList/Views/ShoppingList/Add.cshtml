@using CarPartsShoppingList.Infrastructure.Data.Models
@model ShoppingListItemViewModel

@{
    var engineList = (List<SelectListItem>)ViewBag.EngineList;
    var suspensionList = (List<SelectListItem>)ViewBag.SuspensionList;
    var transmisionList = (List<SelectListItem>)ViewBag.TransmisionList;
}

<div>
    <form method="post">
        <div>
            <label asp-for="@Model.ShoppingListName" class="control-label"></label>
            @Html.EditorFor(x => x. ShoppingListName)
        </div>

        <div>
            <label asp-for="@Model.Engine" class="control-label"></label>
            @Html.DropDownListFor(m => m.Engine,
            new SelectList(engineList, "Value", "Text"), htmlAttributes: new { @class = "form-control"})
        </div>

        <div>
            <label asp-for="@Model.Suspension" class="control-label"></label>
            @Html.DropDownListFor(m => m.Suspension,
            new SelectList(suspensionList, "Value", "Text"), htmlAttributes: new { @class = "form-control"})
        </div>

        <div>
            <label asp-for="@Model.Transmision" class="control-label"></label>
            @Html.DropDownListFor(m => m.Transmision,
            new SelectList(transmisionList, "Value", "Text"), htmlAttributes: new { @class = "form-control"})
        </div>

        <div>
            <button>Add</button>
        </div>
    </form>
</div>