@model SuspensionViewModel

@{
    ViewData ["Title"] = "Add suspension";
}

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Suspension" asp-action="Edit" method="post">
            @Html.HiddenFor(x => x.Id)

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div id="saveContainer">
                <partial name="_SaveFormContent" model="@("#saveContainer")" />

                <div class="row">
                    <div class="col-lg-6">@Html.LabelFor(x => x.SuspensionName)</div>
                    <div class="col-lg-6">@Html.EditorFor(x => x.SuspensionName)</div>
                </div>
                <div class="row">
                    <div class="col-lg-6">@Html.LabelFor(x => x.SuspensionCode)</div>
                    <div class="col-lg-6">@Html.EditorFor(x => x.SuspensionCode)</div>
                </div>
                <div class="row">
                    <div class="col-lg-6">@Html.LabelFor(x => x.SuspensionPrice)</div>
                    <div class="col-lg-6">@Html.EditorFor(x => x.SuspensionPrice)</div>
                </div>
            </div>

            <div class="form-group">

                <input type="submit" value="Save" class="btn btn-success btn-sm single-click-submit" />
                <a asp-controller="Suspension" asp-action="Index" class="btn btn-danger btn-sm">Back</a>
            </div>
        </form>
    </div>
</div>